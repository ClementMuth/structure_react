{
  "name": "azinove",
  "version": "1.0.0",
  "main": "index.ts",
  "repository": "https://github.com/delta-entreprise/azinove.git",
  "author": "Cl√©ment-Muth <clementmuth@gmail.com>",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "compile": "yarn workspace @azinove/nextjs tsc -p .",
    "dev:web": "yarn --cwd packages/nextjs dev",
    "build-function": "yarn --cwd packages/functions build",
    "build": "yarn --cwd packages/nextjs build",
    "export": "yarn --cwd packages/nextjs export",
    "seed:up": "yarn --cwd packages/db seed:up",
    "generate": "graphql-codegen",
    "lint": "eslint --ignore-pattern './**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "deploy": "yarn build && yarn export && firebase deploy --only hosting",
    "emulate": "firebase emulators:start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git-cz --hook"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@emotion/styled": "^10.0.27",
    "@types/node": "^14.14.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.53",
    "@types/rebass__forms": "^4.0.5",
    "@types/typescript": "^2.0.0",
    "@types/yup": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "2",
    "add": "^2.0.6",
    "babel-eslint": "^10.1.0",
    "browserslist": "^4.16.3",
    "commitizen": "^4.2.2",
    "core-js": "2",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "7",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "resize-observer-polyfill": "^1.5.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^11.1.0"
  }
}
